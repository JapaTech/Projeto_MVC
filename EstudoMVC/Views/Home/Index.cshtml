            <a asp-controller="Account" asp-action="Login" class="btn btn-success btn-lg px-4 gap-3">Login</a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary btn-lg px-4">Register</a>
        </div>
        <a asp-controller="TouristAttraction" asp-action="Index" class="btn btn-primary btn-lg px-4">Atrações turísticas</a>
    </div>
</div>