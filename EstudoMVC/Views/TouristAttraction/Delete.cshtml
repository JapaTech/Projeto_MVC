@{
}
<h1>Are you sure you want to delete this tourist attraction?</h1>
<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label asp-for="Name">Atração Turística</label>
        <input asp-for="Name" class="form-control" placeholder="Atração Turística" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description">Descrição</label>
        <input asp-for="Description" class="form-control" placeholder="Descrição" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Image">Imagem</label>
        <input asp-for="Image" class="form-control" placeholder="Imagem" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Cancelar</button>
</form>
<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger float-sm-start mt-3"/>
    </form>
</div>